{
  "name": "smirk",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "23.3.12",
    "@types/node": "10.12.18",
    "@types/react": "16.7.18",
    "@types/react-dom": "16.0.11",
    "electron-is-dev": "^1.0.1",
    "mobx": "^5.8.0",
    "mobx-react": "^5.4.3",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.3",
    "typescript": "3.2.2"
  },
  "scripts": {
    "start": "nf start -p 3000",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "node src/start-react",
    "react-start": "BROWSER=none react-scripts start",
    "pack": "build -c.extraMetadata.main=build/electron.js",
    "dist": "npm run build && npm run pack",
    "postinstall": "install-app-deps"
  },
  "homepage": "./",
  "author": {
    "name": "Kendrick Tan",
    "email": "me@kndrck.co",
    "url": "https://kndrck.co"
  },
  "main": "public/electron.js",
  "build": {
    "productName": "smirk",
    "appId": "co.kndrck.smirk",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-builder": "^20.38.4",
    "foreman": "^3.0.1"
  }
}
